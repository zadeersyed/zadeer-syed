doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Register
    link(rel="stylesheet", href="/styles.css")
    script(src="/assets/js/validation.js" defer)
  body
    nav.navbar
      .navbar-container
        a.navbar-link(href="/") Home
        a.navbar-link(href="/login") Login
        a.navbar-link(href="/register") Register

    .auth-container
      .auth-box
        h1 Register
        form(action="/register", method="POST")
          .input-group
            label(for="name") Full Name
            input#name(type="text", name="name", placeholder="Enter your full name" required)
          .input-group
            label(for="email") Email
            input#email(type="email", name="email", placeholder="Enter your email" required)
          .input-group
            label(for="password") Password
            input#password(type="password", name="password", placeholder="Enter your password" required)
          .input-group
            label(for="confirm-password") Confirm Password
            input#confirm-password(type="password", name="confirmPassword", placeholder="Confirm your password" required)
          button.auth-button(type="submit") Register
        p Already have an account? 
          a(href="/login") Login here
